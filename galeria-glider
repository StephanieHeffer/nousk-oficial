        <div class="col-12 col-sm-8 c-carousel__slides js-carousel--video" style="padding-left: 0 !important; padding-right: 0 !important;">
            <?php $post_count = 0; ?>
            <?php while (have_posts() && $paged == 1) : ?>
                <?php the_post(); ?>
                <?php get_template_part('templates/components/highlight-video'); ?>
                <?php $post_count++; ?>
                <?php if ($post_count === 3) { ?>
                    <?php break; ?>
                <?php  } ?>
            <?php endwhile; ?>
        </div>
        <button class="col-12 col-sm-2 js-carousel--video-next" style="color: white;background: transparent;font-weight: bold;border-color: transparent;outline: none !important;font-size: -webkit-xxx-large;">&gt;</button>
        <script src="<?php echo get_template_directory_uri(); ?>/assets/js/_slidehomevideo.js"></script>
    </section>

var $simpleCarousel = document.querySelector(".js-carousel--video");

new Glider($simpleCarousel, {
  slidesToShow: 1,
  slidesToScroll: 1,
  draggable: true,
  arrows: {
    prev: ".js-carousel--video-prev",
    next: ".js-carousel--video-next",
  },
});


